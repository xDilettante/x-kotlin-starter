<configuration>
    <conversionRule conversionWord="xcolor" class="x.logback.HighlightingCompositeConverterEx" />

    <property name="APP_ENV" value="${APP_ENV:-dev}"/>
    <property name="APP_NAME" value="${APP_NAME:-app}"/>
    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>

    <!-- ROOT (общая отсечка) -->
    <property name="ROOT_LEVEL" value="${LOG_ROOT_LEVEL:-INFO}"/>

    <!-- Пороги аппендеров (OFF = фактически выключить) -->
    <property name="CONSOLE_THRESHOLD" value="${LOG_CONSOLE_THRESHOLD:-INFO}"/>
    <property name="TEXT_THRESHOLD" value="${LOG_TEXT_THRESHOLD:-INFO}"/>
    <property name="JSON_THRESHOLD" value="${LOG_JSON_THRESHOLD:-OFF}"/>

    <!-- Ротация -->
    <property name="MAX_FILE_SIZE" value="${LOG_MAX_FILE_SIZE:-100MB}"/>
    <property name="MAX_HISTORY" value="${LOG_MAX_HISTORY:-14}"/>
    <property name="TOTAL_SIZE_CAP" value="${LOG_TOTAL_SIZE_CAP:-5GB}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %xcolor(%-5level) %white(%d) %magenta(%logger{24}) %cyan([%thread]) - %xcolor(%msg%n)
            </pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${CONSOLE_THRESHOLD}</level>
        </filter>
    </appender>

    <!-- FILE TEXT -->
    <appender name="FILE_TEXT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <encoder>
            <pattern>%-5level %d{yyyy-MM-dd HH:mm:ss.SSS} %logger{48} [%thread] - %msg%n</pattern>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${TEXT_THRESHOLD}</level>
        </filter>
    </appender>

    <appender name="ASYNC_FILE_TEXT" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE_TEXT"/>
    </appender>

    <!-- FILE JSON (jsonl) -->
    <appender name="FILE_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.jsonl</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.jsonl.gz</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>

        <!-- Нужна зависимость net.logstash.logback:logstash-logback-encoder -->
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}","env":"${APP_ENV}"}</customFields>
        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${JSON_THRESHOLD}</level>
        </filter>
    </appender>

    <appender name="ASYNC_FILE_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE_JSON"/>
    </appender>

    <root level="${ROOT_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_FILE_TEXT"/>
        <appender-ref ref="ASYNC_FILE_JSON"/>
    </root>

</configuration>